# ============================================
# Variáveis de Ambiente - PRODUÇÃO
# Copie para .env e preencha os valores
# ============================================

# Versão do deploy (opcional)
VERSION=latest

# ==========================================
# URLs Públicas
# ==========================================
VITE_API_URL=/api
CORS_ORIGIN=https://seu-dominio.com.br

# ==========================================
# Database (PostgreSQL)
# ==========================================
DB_NAME=editor_prod
DB_USER=editor
DB_PASSWORD=GERE_UMA_SENHA_FORTE_AQUI

# URL completa para o backend
DATABASE_URL=postgresql://editor:GERE_UMA_SENHA_FORTE_AQUI@postgres:5432/editor_prod

# ==========================================
# Redis
# ==========================================
REDIS_PASSWORD=GERE_UMA_SENHA_FORTE_AQUI
REDIS_URL=redis://:GERE_UMA_SENHA_FORTE_AQUI@redis:6379

# ==========================================
# RabbitMQ
# ==========================================
RABBITMQ_USER=editor
RABBITMQ_PASSWORD=GERE_UMA_SENHA_FORTE_AQUI
RABBITMQ_VHOST=editor
RABBITMQ_URL=amqp://editor:GERE_UMA_SENHA_FORTE_AQUI@rabbitmq:5672/editor

# ==========================================
# Storage (MinIO/S3)
# ==========================================
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=GERE_UMA_CHAVE_AQUI
S3_SECRET_KEY=GERE_UMA_CHAVE_SECRETA_AQUI
S3_BUCKET_ASSETS=editor-assets
S3_BUCKET_RENDERS=editor-renders

# ==========================================
# JWT (IMPORTANTE: Gere chaves únicas!)
# ==========================================
# Use: openssl rand -base64 64
JWT_SECRET=GERE_UMA_CHAVE_SECRETA_DE_64_CARACTERES_AQUI
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==========================================
# Stripe (Pagamentos)
# ==========================================
# Obtenha em: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_XXXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXX
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_XXXXXXXXXXXXX

# ==========================================
# Email (SMTP) - Opcional
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-de-app
SMTP_FROM=noreply@seu-dominio.com.br

# ==========================================
# Monitoramento - Opcional
# ==========================================
# Sentry DSN para tracking de erros
SENTRY_DSN=

# ==========================================
# SSL/Domínio
# ==========================================
DOMAIN=seu-dominio.com.br
SSL_EMAIL=seu-email@gmail.com
