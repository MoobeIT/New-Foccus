# Configurações Locais - Docker Compose
DATABASE_URL=postgresql://editor_user:editor_password@localhost:5432/editor_produtos
DB_HOST=localhost
DB_PORT=5432
DB_NAME=editor_produtos
DB_USER=editor_user
DB_PASSWORD=editor_password

# Redis Local
REDIS_URL=redis://:redis_password@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# RabbitMQ Local
RABBITMQ_URL=amqp://editor_user:rabbitmq_password@localhost:5672/editor_vhost
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=editor_user
RABBITMQ_PASSWORD=rabbitmq_password
RABBITMQ_VHOST=editor_vhost

# Storage Local (MinIO)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=editor_minio
S3_SECRET_KEY=minio_password
S3_BUCKET_ASSETS=editor-assets
S3_BUCKET_RENDERS=editor-renders
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Aplicação
NODE_ENV=development
PORT=3000
API_VERSION=v1
CORS_ORIGIN=http://localhost:5173

# Logs
LOG_LEVEL=debug
LOG_FORMAT=json

# Render Service
RENDER_TIMEOUT=120000
RENDER_CONCURRENCY=4
PREVIEW_TIMEOUT=30000

# Upload Limits
MAX_FILE_SIZE=50MB
MAX_FILES_PER_UPLOAD=100
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/tiff,image/webp

# LGPD
DATA_RETENTION_DAYS=730
CONSENT_VERSION=1.0

# Monitoramento
SENTRY_DSN=
PROMETHEUS_PORT=9090

# Notificações
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@editor.com

# WhatsApp/SMS
WHATSAPP_API_KEY=
SMS_API_KEY=

# Pagamentos
PIX_PROVIDER=
PIX_API_KEY=
CREDIT_CARD_PROVIDER=
CREDIT_CARD_API_KEY=

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Frontend Stripe (VITE prefix for Vite to expose)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key